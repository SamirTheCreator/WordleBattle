<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #32a852;" stylesheets="@WelcomePage.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.irgashevsamir.javafx_samples.WelcomePageController">
   <children>
      <Label layoutX="208.0" layoutY="94.0" text="Welcome to Wordle Battle!" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Comic Sans MS Bold" size="29.0" />
         </font>
      </Label>
      <TextField fx:id="name" layoutX="235.0" layoutY="237.0" promptText="Name">
         <font>
            <Font name="Comic Sans MS Bold" size="20.0" />
         </font>
      </TextField>
      <Button layoutX="517.0" layoutY="237.0" mnemonicParsing="false" onAction="#validateButton" prefHeight="40.0" prefWidth="54.0" text="OK" textFill="#32a852">
         <font>
            <Font size="19.0" />
         </font>
      </Button>
      <Button fx:id="join_btn" disable="true" layoutX="235.0" layoutY="296.0" mnemonicParsing="false" onAction="#joinTheGame" prefHeight="40.0" prefWidth="150.0" text="Join" textFill="#32a852">
         <font>
            <Font size="19.0" />
         </font>
      </Button>
      <Button fx:id="host_btn" disable="true" layoutX="418.0" layoutY="297.0" mnemonicParsing="false" onAction="#hostTheGame" prefHeight="40.0" prefWidth="153.0" text="Host" textFill="#32a852">
         <font>
            <Font size="19.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
